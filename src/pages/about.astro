---
import Container from "@components/Container.astro";
import Link from "@components/Link.astro";
import { ABOUT } from "@consts";
import Layout from "@layouts/Layout.astro";
const url_external = true;
---

<Layout title={ABOUT.TITLE} description={ABOUT.DESCRIPTION}>
  <Container>
    <aside data-pagefind-ignore>
      <div class="space-y-10">
        <div class="animate font-semibold text-black dark:text-white">
          About
        </div>
        <div class="space-y-4">
          <section class="animate not-prose flex flex-col gap-4 text-justify">
            <p class="text-justify">
              <Link
                href="https://docs.astro.build/zh-cn/getting-started/"
                external={url_external}>Astro Docs</Link
              >
            </p>
            <p class="text-justify">
              <Link
                href="https://astro-nano-demo.vercel.app"
                external={url_external}
              >
                Astro Nano
              </Link>
            </p>
            <p class="text-justify">
              <Link
                href="https://astro-micro-academic.vercel.app"
                external={url_external}
              >
                Astro Micro Academics
              </Link>
            </p>
            <p class="text-justify">
              <Link
                href="https://markdown.com.cn/basic-syntax/"
                external={url_external}
              >
                Markdown 语法
              </Link>
            </p>
            <p class="text-justify">
              <Link href="https://app.netlify.com/" external={url_external}>
                Netlify
              </Link>
            </p>
          </section>

          <section class="animate space-y-6">
            <span class="animate">
              <h4 class="font-semibold text-black dark:text-white">
                技术服务支持
              </h4>
              <article>
                <p>email: sprite2345@gmail.com</p>
              </article>
            </span>
          </section>
        </div>
      </div>
